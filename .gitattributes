# Normalize all text files
* text=auto

# Explicitly set LF for source code and config files
*.dart     text eol=lf
*.yaml     text eol=lf
*.yml      text eol=lf
*.json     text eol=lf
*.xml      text eol=lf
*.html     text eol=lf
*.css      text eol=lf
*.js       text eol=lf
*.ts       text eol=lf
*.md       text eol=lf
*.sh       text eol=lf
*.bat      text eol=crlf
*.gradle   text eol=lf
*.java     text eol=lf

# Binary files (never auto-convert line endings)
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.zip      binary
*.ttf      binary
*.otf      binary
*.mp3      binary
*.mp4      binary
*.wav      binary
*.so       binary
*.dll      binary
*.exe      binary
*.bin      binary
*.apk      binary
*.aar      binary

# Flutter-specific files
pubspec.lock  text eol=lf
pubspec.yaml  text eol=lf
